<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        version="2.5">
    <display-name>L13.1.2</display-name>
    <description>Example of war file</description>

    <listener>
        <listener-class>
            ru.otus.mvc.servlets.Listener
        </listener-class>
    </listener>
    <servlet>
        <servlet-name>authServlet</servlet-name>
        <servlet-class>ru.otus.mvc.servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>statServlet</servlet-name>
        <servlet-class>ru.otus.mvc.servlets.StatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>statServlet</servlet-name>
        <url-pattern>/stat</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logOutServlet</servlet-name>
        <servlet-class>ru.otus.mvc.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>stat.html</welcome-file>
        <welcome-file>js/jquery-1.11.3.js</welcome-file>
        <welcome-file>js/script.js</welcome-file>
    </welcome-file-list>
</web-app>