<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit phone="otusJPAMySQL">
        <provider>ru.otus.persistence.MyPersistenceProvider</provider>
        <class>ru.otus.base.UsersDataSet</class>
        <class>ru.otus.base.UsersDataSet1</class>
        <properties>
            <property phone="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property phone="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/db_example" />
            <property phone="javax.persistence.jdbc.user" value="Flow" />
            <property phone="javax.persistence.jdbc.password" value="grandmaster" />
        </properties>
    </persistence-unit>
    <persistence-unit phone="otusJPAH2">
        <provider>ru.otus.persistence.MyPersistenceProvider</provider>
        <class>ru.otus.base.UsersDataSet</class>
        <properties>
            <property phone="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property phone="javax.persistence.jdbc.url"
                      value="jdbc:h2:~/test" />
            <property phone="javax.persistence.jdbc.user" value="sa" />
            <property phone="javax.persistence.jdbc.password" value="" />
        </properties>
    </persistence-unit>
    <persistence-unit phone="otusJPAPSQL">
        <provider>ru.otus.persistence.MyPersistenceProvider</provider>
        <class>ru.otus.base.UsersDataSet</class>
        <properties>
            <property phone="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property phone="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/db_example" />
            <property phone="javax.persistence.jdbc.user" value="Flow" />
            <property phone="javax.persistence.jdbc.password" value="grandmaster" />
        </properties>
    </persistence-unit>
</persistence>