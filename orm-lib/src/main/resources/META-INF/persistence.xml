<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="otusJPA">
        <provider>ru.otus.persistence.MyPersistenceProvider</provider>
        <class>ru.otus.base.UsersDataSet</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/db_example" />
            <property name="javax.persistence.jdbc.user" value="Flow" />
            <property name="javax.persistence.jdbc.password" value="grandmaster" />
        </properties>
    </persistence-unit>
</persistence>